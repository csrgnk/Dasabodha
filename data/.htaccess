# Enable URL rewriting
RewriteEngine On

# Make sure .php files still work normally
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Rewrite clean slugs to view.php
RewriteRule ^([a-zA-Z0-9\-]+)/?$ view.php?slug=$1 [L,QSA]

# Default index.php for root
DirectoryIndex index.php
